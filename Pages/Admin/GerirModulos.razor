@page "/admin/GerirModulos"
@namespace gestaopedagogica.Pages.Admin
@layout MainLayout

@using gestaopedagogica.Services
@using gestaopedagogica.Models
@inject ModuloService ModuloService

<h3>Gerir Módulos</h3>

@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<button class="btn btn-success mb-3" @onclick="MostrarCriar">Adicionar Módulo</button>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Professor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Modulos)
        {
            <tr>
                <td>@m.Nome</td>
                <td>@m.Professor</td>
                <td>
                    <button class="btn btn-primary btn-sm" @onclick="() => Editar(m)">Editar</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => Remover(m.Id)">Remover</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (MostrarModal)
{
    <div class="modal-bg">
        <div class="modal-card">
            <h4>@(EditarModulo.Id == 0 ? "Novo Módulo" : "Editar Módulo")</h4>

            <input class="form-control mb-2" placeholder="Nome" @bind="EditarModulo.Nome" />
            <input class="form-control mb-2" placeholder="Professor" @bind="EditarModulo.Professor" />

            <button class="btn btn-success" @onclick="Salvar">Guardar</button>
            <button class="btn btn-secondary ms-2" @onclick="Cancelar">Cancelar</button>
        </div>
    </div>
}

@code {
    private List<Modulo> Modulos = new();
    private Modulo EditarModulo = new();
    private bool MostrarModal = false;
    private string? Message;

    protected override async Task OnInitializedAsync()
    {
        await CarregarModulos();
    }

    private async Task CarregarModulos()
    {
        Modulos = await ModuloService.GetModulosAsync();
    }

    private void MostrarCriar()
    {
        EditarModulo = new Modulo();
        MostrarModal = true;
    }

    private void Editar(Modulo m)
    {
        EditarModulo = new Modulo
        {
            Id = m.Id,
            Nome = m.Nome,
            Professor = m.Professor
        };
        MostrarModal = true;
    }

    private async Task Salvar()
    {
        if (string.IsNullOrWhiteSpace(EditarModulo.Nome) || string.IsNullOrWhiteSpace(EditarModulo.Professor))
        {
            Message = "Preencha todos os campos!";
            return;
        }

        if (EditarModulo.Id == 0)
        {
            await ModuloService.AddModuloAsync(EditarModulo);
            Message = "Módulo criado com sucesso!";
        }
        else
        {
            await ModuloService.UpdateModuloAsync(EditarModulo);
            Message = "Módulo atualizado com sucesso!";
        }

        MostrarModal = false;
        await CarregarModulos();
    }

    private async Task Remover(int id)
    {
        var modulo = Modulos.FirstOrDefault(m => m.Id == id);
        if (modulo != null)
        {
            await ModuloService.RemoveModuloAsync(modulo);
            Message = "Módulo removido!";
            await CarregarModulos();
        }
    }

    private void Cancelar()
    {
        MostrarModal = false;
    }
}
