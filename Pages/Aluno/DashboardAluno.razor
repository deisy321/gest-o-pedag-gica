@page "/aluno/DashboardAluno"
@namespace gestaopedagogica.Pages.Aluno
@layout MainLayout
@using gestaopedagogica.Models
@using gestaopedagogica.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject TrabalhoService TrabalhoService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<AuthorizeView Roles="Aluno">
    <Authorized>
        <h3 class="mb-4">Dashboard do Aluno</h3>

        <h5>Trabalhos Disponíveis</h5>
        @if (Trabalhos == null)
        {
            <p><em>Carregando trabalhos...</em></p>
        }
        else if (!Trabalhos.Any())
        {
            <p><em>Sem trabalhos disponíveis no momento.</em></p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Trabalhos)
                    {
                        <tr>
                            <td>@t.Titulo</td>
                            <td>
                                @(t.DataEnvio != null ? "Enviado" : "Pendente")
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/aluno/EnviarTrabalho?id=@t.Id">
                                    Enviar / Editar
                                </a>
                                @foreach (var vert in t.Vertentes)
                                {
                                    @if (!string.IsNullOrEmpty(vert.FicheiroPath))
                                    {
                                        <a class="btn btn-sm btn-secondary ms-1" href="@vert.FicheiroPath" target="_blank">
                                            @vert.Tipo
                                        </a>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger mt-5 card-custom">
            <h4>Acesso Negado</h4>
            <p>Você não tem permissão para acessar o dashboard do aluno.</p>
            <p>Por favor, <a href="/Identity/Account/Login">faça login novamente</a> com uma conta de aluno.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<TrabalhoAlunoViewModel> Trabalhos { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var alunoId = user.FindFirst(c => c.Type == "sub")?.Value ?? "";

        var trabalhosDb = await TrabalhoService.GetTrabalhosDoAlunoAsync(alunoId);

        Trabalhos = trabalhosDb.Select(t => new TrabalhoAlunoViewModel
        {
            Id = t.Id,
            Titulo = t.Titulo,
            // Se DataEnvio for DateTime normal, transforma em nullable
            DataEnvio = t.DataEnvio == default(DateTime) ? null : t.DataEnvio,
            Vertentes = t.TrabalhoVertentes.Select(v => new VertenteAlunoViewModel
            {
                Tipo = v.Tipo,
                FicheiroPath = v.FicheiroPath,
                Nota = v.Nota,
                Feedback = v.Feedback
            }).ToList()
        }).ToList();
    }

    public class TrabalhoAlunoViewModel
    {
        public int Id { get; set; }
        public string Titulo { get; set; } = "";
        public DateTime? DataEnvio { get; set; }  // Nullable
        public List<VertenteAlunoViewModel> Vertentes { get; set; } = new();
    }

    public class VertenteAlunoViewModel
    {
        public string Tipo { get; set; } = "";
        public string? FicheiroPath { get; set; }
        public decimal? Nota { get; set; }
        public string? Feedback { get; set; }
    }
}
