@page "/aluno/DashboardAluno"
@namespace gestaopedagogica.Pages.Aluno
@layout MainLayout
@using gestaopedagogica.Models
@using gestaopedagogica.Services
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@inject TrabalhoService TrabalhoService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<AuthorizeView Roles="Aluno">
    <Authorized>
        <h3 class="mb-4">Dashboard do Aluno</h3>

        <h5>Trabalhos Disponíveis</h5>

        @if (Trabalhos == null)
        {
            <p><em>Carregando trabalhos...</em></p>
        }
        else if (!Trabalhos.Any())
        {
            <p><em>Sem trabalhos disponíveis no momento.</em></p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Trabalhos)
                    {
                        <tr>
                            <td>@t.Titulo</td>
                            <td>@(t.DataEnvio != null ? "Enviado" : "Pendente")</td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/aluno/EnviarTrabalho/@t.Id">
                                    Enviar / Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger mt-5">
            <h4>Acesso Negado</h4>
            <p>Você não tem permissão para acessar o dashboard do aluno.</p>
            <p>Por favor, <a href="/Identity/Account/Login">faça login novamente</a> com uma conta de aluno.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<TrabalhoAlunoViewModel> Trabalhos { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        // Pegar ID do aluno logado
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var alunoId = authState.User.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value ?? "";

        // Buscar trabalhos disponíveis usando o service atualizado
        var trabalhosDb = await TrabalhoService.GetTrabalhosDisponiveisParaAlunoAsync(alunoId);

        // Mapear para ViewModel
        Trabalhos = trabalhosDb.Select(t => new TrabalhoAlunoViewModel
        {
            Id = t.Id,
            Titulo = t.Titulo,
            // Se DataEnvio for default(DateTime), considera como pendente
            DataEnvio = t.DataEnvio == default(DateTime) ? null : t.DataEnvio
        }).ToList();
    }

    public class TrabalhoAlunoViewModel
    {
        public int Id { get; set; }
        public string Titulo { get; set; } = "";
        public DateTime? DataEnvio { get; set; }
    }
}
