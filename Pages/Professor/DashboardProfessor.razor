@page "/professor/DashboardProfessor"
@using gestaopedagogica.Services
@using gestaopedagogica.Models
@inject TrabalhoService TrabalhoService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

<h3>Dashboard do Professor</h3>

<button class="btn btn-success mb-3" @onclick="CriarTrabalho">Criar Novo Trabalho</button>

@if (Trabalhos == null)
{
    <p><em>Carregando trabalhos...</em></p>
}
else if (!Trabalhos.Any())
{
    <p>Nenhum trabalho criado ainda.</p>
}
else
{
    @foreach (var trabalho in Trabalhos)
    {
        <div class="card mb-3 p-3 shadow-sm">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5>@trabalho.Titulo</h5>
                <div>
                    <button class="btn btn-warning btn-sm me-1" @onclick="() => EditarTrabalho(trabalho.Id)">Editar</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => DeletarTrabalho(trabalho.Id)">Excluir</button>
                </div>
            </div>

            <strong>Aluno: @trabalho.AlunoNome</strong>
            <ul class="list-group list-group-flush">
                @foreach (var vert in trabalho.Vertentes)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@vert.Tipo</strong>

                            @if (!string.IsNullOrEmpty(vert.ConteudoTexto))
                            {
                                <div class="mt-1"><em>@vert.ConteudoTexto</em></div>
                            }
                        </div>

                        <div class="text-end d-flex flex-column align-items-end">
                            @* Status do envio *@
                            @if (vert.DataEnvio.HasValue || !string.IsNullOrEmpty(vert.ConteudoTexto) || (vert.FicheiroBytes != null && !string.IsNullOrEmpty(vert.FicheiroNome)))
                            {
                                <span class="text-success">✅ Enviado</span>

                                @if (vert.FicheiroBytes != null && !string.IsNullOrEmpty(vert.FicheiroNome))
                                {
                                    <a class="btn btn-sm btn-link mt-1"
                                       href="/ficheiro/vertente/@vert.Id"
                                       target="_blank">
                                        Abrir arquivo
                                    </a>
                                }
                            }
                            else
                            {
                                <span class="text-danger">❌ Pendente</span>
                            }


                            @* Nota *@
                            @if (vert.Nota.HasValue)
                            {
                                <span class="mt-1">Nota: @vert.Nota.Value</span>
                            }

                            <button class="btn btn-primary btn-sm mt-1" @onclick="() => AvaliarVertente(trabalho.Id, vert.Tipo)">Avaliar</button>
                        </div>
                    </li>
                }
            </ul>
        </div>
    }
}

@code {
    private List<TrabalhoViewModel> Trabalhos { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await CarregarTrabalhos();
    }

    private async Task CarregarTrabalhos()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var professorId = authState.User.FindFirst(c => c.Type == "sub")?.Value ?? "";

        var trabalhosDb = await TrabalhoService.GetTrabalhosDoProfessorAsync(professorId);

        Trabalhos = trabalhosDb.Select(t => new TrabalhoViewModel
        {
            Id = t.Id,
            Titulo = t.Titulo ?? "Título não informado",
            AlunoId = t.AlunoId,
            AlunoNome = t.AlunoId, // opcional: buscar nome real do Identity
            Vertentes = t.TrabalhoVertentes.Select(v => new VertenteViewModel
            {
                Id = v.Id,
                Tipo = v.Tipo ?? "",
                DataEnvio = v.DataEnvio == default ? null : v.DataEnvio,
                FicheiroNome = v.FicheiroNome ?? "",
                FicheiroBytes = v.FicheiroBytes,
                ConteudoTexto = v.ConteudoTextoAluno ?? "",
                Nota = v.Nota
            }).ToList()
        }).ToList();
    }

    private void CriarTrabalho()
    {
        Nav.NavigateTo("/professor/CriarRoteiro");
    }

    private void EditarTrabalho(int trabalhoId)
    {
        Nav.NavigateTo($"/professor/EditarTrabalho/{trabalhoId}");
    }

    private async Task DeletarTrabalho(int trabalhoId)
    {
        bool confirmar = await JSRuntime.InvokeAsync<bool>("confirm", "Tem certeza que deseja excluir este trabalho?");
        if (confirmar)
        {
            await TrabalhoService.ApagarTrabalhoAsync(trabalhoId);
            await CarregarTrabalhos();
        }
    }

    private void AbrirArquivo(int vertenteId)
    {
        // apontando para o controller correto
        Nav.NavigateTo($"/ficheiro/vertente/{vertenteId}", true);
    }

    private void AvaliarVertente(int trabalhoId, string tipoVertente)
    {
        Nav.NavigateTo($"/professor/AvaliarVertente/{trabalhoId}/{tipoVertente}");
    }

    // ViewModels
    public class TrabalhoViewModel
    {
        public int Id { get; set; }
        public string Titulo { get; set; } = "";
        public string AlunoId { get; set; } = "";
        public string AlunoNome { get; set; } = "";
        public List<VertenteViewModel> Vertentes { get; set; } = new();
    }

    public class VertenteViewModel
    {
        public int Id { get; set; }
        public string Tipo { get; set; } = "";
        public DateTime? DataEnvio { get; set; }
        public string FicheiroNome { get; set; } = "";
        public byte[]? FicheiroBytes { get; set; }
        public string ConteudoTexto { get; set; } = "";
        public decimal? Nota { get; set; }
    }
}
