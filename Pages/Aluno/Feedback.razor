@page "/aluno/Feedback"
@namespace gestaopedagogica.Pages.Aluno
@layout MainLayout

<h3>Feedback dos Professores</h3>

<div class="card p-4">
    <h5>Comentários e Sugestões</h5>
  @if (feedbacks?.Count > 0)
    {
       <div class="list-group">
   @foreach (var feedback in feedbacks)
         {
   <div class="list-group-item mb-2">
      <div class="d-flex justify-content-between align-items-start">
       <div class="flex-grow-1">
   <h6>@feedback.ProfessorNome</h6>
         <p class="text-muted small mb-1">@feedback.Modulo - @feedback.Data.ToShortDateString()</p>
            <p>@feedback.Comentario</p>
  </div>
 </div>
  </div>
      }
      </div>
    }
  else
    {
  <p class="text-muted">Sem feedback disponível no momento.</p>
     }
</div>

@code {
   private List<FeedbackItem> feedbacks = new();

    protected override void OnInitialized()
   {
        // TODO: Carregar feedback do banco de dados
  }

    private class FeedbackItem
   {
      public string ProfessorNome { get; set; }
     public string Modulo { get; set; }
        public DateTime Data { get; set; }
     public string Comentario { get; set; }
    }
}
