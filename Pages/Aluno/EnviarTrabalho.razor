@page "/aluno/EnviarTrabalho/{Id:int}"
@namespace gestaopedagogica.Pages.Aluno
@layout MainLayout
@using gestaopedagogica.Models
@using gestaopedagogica.Services
@inject TrabalhoService TrabalhoService
@inject NavigationManager Nav

<h3>@Trabalho?.Titulo ?? "Trabalho não encontrado"</h3>

@if (!string.IsNullOrEmpty(StatusMessage))
{
    <div class="alert alert-info">@StatusMessage</div>
}

@if (FormEnviado)
{
    <div class="alert alert-success">
        ✅ Trabalho enviado com sucesso!
    </div>
}
else if (Vertentes == null)
{
    <p>Carregando vertentes...</p>
}
else
{
    <EditForm Model="Vertentes" OnValidSubmit="Enviar">
        @foreach (var vert in Vertentes)
        {
            <div class="card mb-3 p-3">
                <h5>@vert.Tipo</h5>

                @if (!string.IsNullOrEmpty(vert.ConteudoTextoProfessor))
                {
                    <p><strong>Instrução do professor:</strong> @vert.ConteudoTextoProfessor</p>
                }

                <textarea class="form-control mt-2"
                          placeholder="Escreva aqui sua resposta..."
                          @bind="vert.ConteudoTextoAluno"></textarea>

                <div class="mt-2">
                    <label>Enviar ficheiro:</label>
                    <InputFile OnChange="e => UploadArquivo(e, vert)" />

                    @if (!string.IsNullOrEmpty(vert.ArquivoNome))
                    {
                        <p>Arquivo selecionado: @vert.ArquivoNome</p>
                        <a href="uploads/@vert.ArquivoNome" target="_blank">Baixar arquivo</a>
                    }
                </div>
            </div>
        }

        <button class="btn btn-primary" type="submit">Enviar Trabalho</button>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private Trabalho? Trabalho;
    private List<AlunoVertenteModel>? Vertentes;
    private string StatusMessage = "";
    private bool FormEnviado = false;

    protected override async Task OnInitializedAsync()
    {
        Trabalho = await TrabalhoService.GetTrabalhoPorIdAsync(Id);

        if (Trabalho != null)
        {
            var vertentesDb = await TrabalhoService.GetVertentesDoTrabalhoAsync(Trabalho.Id);

            if (vertentesDb.Count > 0)
            {
                Vertentes = vertentesDb.Select(v => new AlunoVertenteModel
                {
                    Id = v.Id,
                    Tipo = v.Tipo,
                    ConteudoTextoProfessor = v.ConteudoTexto,
                    ConteudoTextoAluno = v.ConteudoTextoAluno ?? "",
                    ArquivoNome = v.FicheiroPath
                }).ToList();
            }
            else
            {
                StatusMessage = "❌ Nenhuma vertente encontrada para este trabalho.";
                Vertentes = new List<AlunoVertenteModel>();
            }
        }
        else
        {
            StatusMessage = "❌ Trabalho não encontrado.";
            Vertentes = new List<AlunoVertenteModel>();
        }
    }

    private async Task Enviar()
    {
        if (Vertentes == null || Vertentes.Count == 0) return;

        try
        {
            foreach (var vert in Vertentes)
            {
                var vertDb = await TrabalhoService.GetVertentePorIdAsync(vert.Id);
                if (vertDb != null)
                {
                    vertDb.ConteudoTextoAluno = vert.ConteudoTextoAluno?.Trim() ?? "";

                    if (vert.Arquivo != null)
                    {
                        vertDb.FicheiroPath = vert.ArquivoNome;
                    }

                    await TrabalhoService.AtualizarVertenteAsync(vertDb);
                }
            }

            FormEnviado = true; // Marca formulário como enviado
            StatusMessage = ""; // Esconde mensagem de erro se houver
        }
        catch (Exception ex)
        {
            StatusMessage = "❌ Erro ao enviar: " + ex.Message;
        }
    }

    private async Task UploadArquivo(InputFileChangeEventArgs e, AlunoVertenteModel vert)
    {
        var arquivo = e.File;
        vert.Arquivo = arquivo;
        vert.ArquivoNome = arquivo.Name;

        var caminhoPasta = Path.Combine(Environment.CurrentDirectory, "wwwroot", "uploads");

        if (!Directory.Exists(caminhoPasta))
            Directory.CreateDirectory(caminhoPasta);

        var caminhoArquivo = Path.Combine(caminhoPasta, arquivo.Name);

        using var stream = new FileStream(caminhoArquivo, FileMode.Create);
        await arquivo.OpenReadStream(10_000_000).CopyToAsync(stream);
    }

    public class AlunoVertenteModel
    {
        public int Id { get; set; }
        public string Tipo { get; set; } = "";
        public string ConteudoTextoProfessor { get; set; } = "";
        public string ConteudoTextoAluno { get; set; } = "";
        public string? ArquivoNome { get; set; }
        public IBrowserFile? Arquivo { get; set; }
    }
}
