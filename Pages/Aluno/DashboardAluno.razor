@page "/aluno/DashboardAluno"
@namespace gestaopedagogica.Pages.Aluno
@layout MainLayout
@using gestaopedagogica.Models
@using gestaopedagogica.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject TrabalhoService TrabalhoService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<AuthorizeView Roles="Aluno">
    <Authorized>
        <h3 class="mb-4">Dashboard do Aluno</h3>

        <!-- Cards rápidos -->
        <div class="row mb-4 g-3">
            <div class="col-md-3">
                <div class="card card-custom p-3">
                    <h5 class="mb-2">Trabalhos Pendentes</h5>
                    <p>@TrabalhosPendentes trabalhos pendentes</p>
                    <a href="/aluno/EnviarTrabalho" class="btn btn-primary btn-custom btn-sm">Enviar Trabalho</a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-custom p-3">
                    <h5 class="mb-2">Trabalhos Avaliados</h5>
                    <p>@TrabalhosAvaliados trabalhos avaliados</p>
                    <a href="/aluno/MinhasNotas" class="btn btn-primary btn-custom btn-sm">Ver Notas</a>
                </div>
            </div>
        </div>

        <!-- Lista de Trabalhos -->
        <h4 class="mb-3">Meus Trabalhos</h4>
        @if (Trabalhos == null)
        {
            <p><em>Carregando trabalhos...</em></p>
        }
        else if (!Trabalhos.Any())
        {
            <p><em>Nenhum trabalho enviado ainda.</em></p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Data de Envio</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Trabalhos)
                    {
                        <tr>
                            <td>@t.Titulo</td>
                            <td>@t.DataEnvio.ToShortDateString()</td>
                            <td>
                                @(string.IsNullOrEmpty(t.NotaCompetencia) &&
                                                        string.IsNullOrEmpty(t.NotaAptidao) &&
                                                        string.IsNullOrEmpty(t.NotaConhecimento)
                                                        ? "Pendente" : "Avaliado")
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/aluno/EnviarTrabalho?id=@t.Id">
                            Ver/Editar
                        </a>
                        @if (!string.IsNullOrEmpty(t.FicheiroCompetencia))
                                {
                                    <a class="btn btn-sm btn-secondary ms-1" href="@t.FicheiroCompetencia" target="_blank">Competência</a>
                                }
                                @if (!string.IsNullOrEmpty(t.FicheiroAptidao))
                                {
                                    <a class="btn btn-sm btn-secondary ms-1" href="@t.FicheiroAptidao" target="_blank">Aptidão</a>
                                }
                                @if (!string.IsNullOrEmpty(t.FicheiroConhecimento))
                                {
                                    <a class="btn btn-sm btn-secondary ms-1" href="@t.FicheiroConhecimento" target="_blank">Conhecimento</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger mt-5 card-custom">
            <h4>Acesso Negado</h4>
            <p>Você não tem permissão para acessar o dashboard do aluno.</p>
            <p>Por favor, <a href="/Identity/Account/Login">faça login novamente</a> com uma conta de aluno.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<Trabalho> Trabalhos { get; set; } = new();

    private int TrabalhosPendentes => Trabalhos.Count(t =>
        string.IsNullOrEmpty(t.NotaCompetencia) &&
        string.IsNullOrEmpty(t.NotaAptidao) &&
        string.IsNullOrEmpty(t.NotaConhecimento));

    private int TrabalhosAvaliados => Trabalhos.Count(t =>
        !string.IsNullOrEmpty(t.NotaCompetencia) ||
        !string.IsNullOrEmpty(t.NotaAptidao) ||
        !string.IsNullOrEmpty(t.NotaConhecimento));

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var alunoId = user.FindFirst(c => c.Type == "sub")?.Value ?? "";

        Trabalhos = await TrabalhoService.GetTrabalhosDoAlunoAsync(alunoId);
    }
}
