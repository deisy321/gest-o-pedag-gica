@page "/aluno/DashboardAluno"
@namespace gestaopedagogica.Pages.Aluno
@layout MainLayout
@using gestaopedagogica.Models
@using gestaopedagogica.Components
@using gestaopedagogica.Data
@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView Roles="Aluno">
    <Authorized>
        <h3>Dashboard do Aluno</h3>

        <!-- Cards rápidos -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card p-3">
                    <h5>Minhas Notas</h5>
                    <p>Acesse suas avaliações</p>
                    <a href="/aluno/MinhasNotas" class="btn btn-sm btn-primary">Ver Notas</a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3">
                    <h5>Histórico</h5>
                    <p>Consulte seu histórico</p>
                    <a href="/aluno/Historico" class="btn btn-sm btn-primary">Ver Histórico</a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3">
                    <h5>Feedback</h5>
                    <p>Receba feedback dos professores</p>
                    <a href="/aluno/Feedback" class="btn btn-sm btn-primary">Ver Feedback</a>
                </div>
            </div>
        </div>

        <!-- Roteiro de Aprendizagem -->
        <h4>Roteiro de Aprendizagem</h4>
        @foreach (var tarefa in Roteiro.Tarefas.OrderBy(t => t.Ordem))
        {
            <CardTarefa Tarefa="tarefa"
                        EstaHabilitado="HabilitarTarefa(tarefa)"
                        OnEnviado="AtualizarProgresso" />
        }

    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger mt-5">
            <h4>Acesso Negado</h4>
            <p>Você não tem permissão para acessar o dashboard do aluno.</p>
            <p>Por favor, <a href="/Identity/Account/Login">faça login novamente</a> com uma conta de aluno.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private Roteiro Roteiro { get; set; } = new Roteiro
    {
        Titulo = "Exemplo de Roteiro",
        Tarefas = new List<Tarefa>
        {
            new Tarefa { Id = 1, Descricao = "Tarefa 1", Prazo = DateTime.Now.AddDays(1), Ordem = 1 },
            new Tarefa { Id = 2, Descricao = "Tarefa 2", Prazo = DateTime.Now.AddDays(2), Ordem = 2 },
            new Tarefa { Id = 3, Descricao = "Tarefa 3", Prazo = DateTime.Now.AddDays(3), Ordem = 3 }
        }
    };

    private void AtualizarProgresso()
    {
        StateHasChanged(); // Atualiza a UI para desbloquear o próximo card
    }

    private bool HabilitarTarefa(Tarefa tarefa)
    {
        if (tarefa.Ordem == 1) return true; // primeira tarefa sempre habilitada
        var anterior = Roteiro.Tarefas.FirstOrDefault(t => t.Ordem == tarefa.Ordem - 1);
        return anterior != null && anterior.IsSubmitted; // progressão automática pelo envio
    }
}
